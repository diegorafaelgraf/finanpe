<div class="col-md-4 mx-auto">
    <div class="card text-center">
        <div class="card-header">
            <h3>Agregar Tipo de Cuenta</h3>
        </div>
        <div class="card-body">
            <form action="/tipo_de_cuenta/agregar_tipo_de_cuenta" method="POST">
                <div class="form-group m-4">
                    <input type="text" maxlength="50" placeholder="Nombre" autofocus name="nombre_tipo_cuenta" id="nombre_tipo_cuenta" class="form-control" value="{{nombre_tipo_cuenta}}">
                </div>
                <div class="form-group m-4">
                    <button type="submit" class="btn btn-primary btn-block">Guardar</button>
                    <a href="/tipo_de_cuenta/tipos_de_cuenta" class="btn btn-light">Cancelar</a>
                </div>                            
            </form>
        </div>
    </div>
</div>