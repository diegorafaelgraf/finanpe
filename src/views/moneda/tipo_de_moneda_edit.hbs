<div class="col-md-4 mx-auto">
    <div class="card text-center">
        <div class="card-header">
            <h3>Modificar Moneda</h3>
        </div>
        <div class="card body">
            <form action="/moneda/modificar_moneda/{{moneda._id}}" method="POST">
                <div class="from-group m-4">
                    <input type="text" name="nombre_moneda" id="nombre_moneda" class="form-control" autofocus maxlength="20" value="{{moneda.nombre_moneda}}">
                    <input type="hidden" name="nombre_moneda_anterior" id="nombre_moneda_anterior" value="{{moneda.nombre_moneda}}">
                </div>
                <div class="from-group m-4">
                    <input type="text" name="simbolo" id="simbolo" class="form-control" autofocus maxlength="20" value="{{moneda.simbolo}}">
                    <input type="hidden" name="simbolo_anterior" id="simbolo_anterior" value="{{moneda.simbolo}}">
                </div>
                <div class="from-group m-4">
                    <input type="number" name="cotizacion" id="cotizacion" class="form-control" autofocus maxlength="20" value="{{moneda.cotizacion}}"> 
                    <input type="hidden" name="cotizacion_anterior", id="cotizacion_anterior" value="{{moneda.cotizacion}}">                   
                </div>
                <div class="form-group m-4">
                    <button type="submit" class="btn btn-primary btn-block">Guardar</button>
                    <a href="/moneda/tipos_de_moneda" class="btn btn-light">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>